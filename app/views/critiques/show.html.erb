          <div class="progress-bar progress-bar-info" role="progressbar" style="width: 60%">
          </div>
        </div>
        <% else %>
        <% if @critique.metrictwo==2 %>
        <div class="progress">
          <div class="progress-bar progress-bar-warning" role="progressbar" style="width: 40%">
          </div>
        </div>
        <% else %>
        <div class="progress">
          <div class="progress-bar progress-bar-danger" role="progressbar" style="width: 20%">
          </div>
        </div>
        <% end %>
        <% end %>
        <% end %>
        <% end %>
      </dd>


      <dt>Communication</dt>
      <dd>
        <% if @critique.metricthree==5 %>
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" style="width: 100%">
          </div>
        </div>
        <% else %>
        <% if @critique.metricthree==4 %>
        <div class="progress">
          <div class="progress-bar progress-bar-primary" role="progressbar" style="width: 80%">
          </div>
        </div>
        <% else %>
        <% if @critique.metricthree==3 %>
        <div class="progress">
          <div class="progress-bar progress-bar-info" role="progressbar" style="width: 60%">
          </div>
        </div>
        <% else %>
        <% if @critique.metricthree==2 %>
        <div class="progress">
          <div class="progress-bar progress-bar-warning" role="progressbar" style="width: 40%">
          </div>
        </div>
        <% else %>
        <div class="progress">
          <div class="progress-bar progress-bar-danger" role="progressbar" style="width: 20%">
          </div>
        </div>
        <% end %>
        <% end %>
        <% end %>
        <% end %>
      </dd>

      <dt>Committment</dt>
      <dd>
        <% if @critique.metricfour==5 %>
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" style="width: 100%">
          </div>
        </div>
        <% else %>
        <% if @critique.metricfour==4 %>
        <div class="progress">
          <div class="progress-bar progress-bar-primary" role="progressbar" style="width: 80%">
