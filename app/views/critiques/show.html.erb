<div class="page-header">
  <h3>Feedback <!--#<%= @critique.id %> --></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Feedback Title</dt>
      <dd><%= @critique.name %></dd>

      <dt>Description</dt>
      <dd><%= @critique.description %></dd>

<hr>

      <dt>Collaboration</dt>
      <dd>
        <% if @critique.metricone==5 %>
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" style="width: 100%">
          </div>
        </div>
        <% else %>
        <% if @critique.metricone==4 %>
        <div class="progress">
          <div class="progress-bar progress-bar-primary" role="progressbar" style="width: 80%">
          </div>
        </div>
        <% else %>
        <% if @critique.metricone==3 %>
        <div class="progress">
          <div class="progress-bar progress-bar-info" role="progressbar" style="width: 60%">
          </div>
        </div>
        <% else %>
        <% if @critique.metricone==2 %>
        <div class="progress">
          <div class="progress-bar progress-bar-warning" role="progressbar" style="width: 40%">
          </div>
        </div>
        <% else %>
        <div class="progress">
          <div class="progress-bar progress-bar-danger" role="progressbar" style="width: 20%">
          </div>
        </div>
        <% end %>
        <% end %>
        <% end %>
        <% end %>
      </dd>

      <!-- ___________________________ -->
      <dt>Reliability</dt>
      <dd>
        <% if @critique.metrictwo==5 %>
        <div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" style="width: 100%">
          </div>
        </div>
        <% else %>
        <% if @critique.metrictwo==4 %>
        <div class="progress">
          <div class="progress-bar progress-bar-primary" role="progressbar" style="width: 80%">
