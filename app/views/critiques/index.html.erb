<div class="page-header">
  <h1>
    Critiques
    <a href="/critiques/new" class="btn btn-lg btn-success">New Critique</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>User</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @critiques.each do |critique| %>
      <tr>
        <td><%= critique.description %></td>
        <td><%= critique.user_id %></td>
        <td><%= critique.name %></td>
        <td>
          <a href="/critiques/<%= critique.id %>" class="btn btn-primary">Show</a>
          <a href="/critiques/<%= critique.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_critique/<%= critique.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
