
<%= search_form_for @q do |f| %>
<h6>Scroll down for list of friends</h6>
<p class="lead"><strong><em>Narrow results by:</em></strong></p>

<div class="form-group">
  <%= f.label :program_eq, "Program" %>
  <%#= f.select :id_eq, options_from_collection_for_select(User.all, :id, :program, @q.id_eq), { :include_blank => true }, :class => "form-control" %>
  <%= f.select :program_eq, options_for_select( ["MMM", "2Y FT MBA", "1Y FT MBA", "JD-MBA"], @q.program_eq), { :include_blank => true }, :class => "form-control" %>

</div>

<div class="form-group">
  <%= f.label :gradyear_eq, "Graduation Year" %>
  <%#= f.select :id_eq, options_from_collection_for_select(User.all, :id, :gradyear, @q.id_eq), { :include_blank => true }, :class => "form-control" %>
  <%= f.select :gradyear_eq, options_for_select( ["2017", "2016", "2018", "2019"],  @q.gradyear_eq), { :include_blank => true }, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :indexpert_eq, "Industry Expertise" %>
  <%#= f.select :id_eq, options_from_collection_for_select(User.all, :id, :program, @q.id_eq), { :include_blank => true }, :class => "form-control" %>
  <%= f.select :indexpert_eq, options_for_select(["Aerospace", "Automotive", "Consulting", "Consumer products and retail", "Education", "Fashion and apparel", "Healthcare", "Media, entertainment and advertising", "Technology"], @q.indexpert_eq), { :include_blank => true }, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :funcexpert_eq, "Functional Expertise" %>
  <%#= f.select :id_eq, options_from_collection_for_select(User.all, :id, :program, @q.id_eq), { :include_blank => true }, :class => "form-control" %>
  <%= f.select :funcexpert_eq, options_for_select(["Accounting", "Economics", "Entrepreneurship", "Finance", "General Management", "Innovation", "Consulting", "Marketing", "Operations"], @q.funcexpert_eq), { :include_blank => true }, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :efftime_eq, "Morning or night person" %>
  <%#= f.select :id_eq, options_from_collection_for_select(User.all, :id, :program, @q.id_eq), { :include_blank => true }, :class => "form-control" %>
  <%= f.select :efftime_eq, options_for_select(["Morning Lark", "Night Owl", "It doesn't matter"], @q.efftime_eq), { :include_blank => true }, :class => "form-control" %>
</div>

<div class="form-group">
  <%= f.label :poetquant_eq, "Poet or Quant" %>
  <%#= f.select :id_eq, options_from_collection_for_select(User.all, :id, :program, @q.id_eq), { :include_blank => true }, :class => "form-control" %>
  <%= f.select :poetquant_eq, options_for_select(["Poet", "Quant"], @q.poetquant_eq), { :include_blank => true }, :class => "form-control" %>
</div>

<%= f.submit :class => "btn btn-primary btn-block" %>
<!--unsure about where the clear filters tab should direct the page? Refresh to same page> users/index?-->
<a href="/users" class="btn btn-default btn-block">Clear filters</a>

<hr>


  <table class="table table-striped table-hover">
    <tr>

      <th>Image</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Program</th>
      <th>Graduation Year</th>
      <th>Industry Expertise</th>
      <th>Functional Expertise</th>

      <!--    <th>User</th> -->

      <th>Actions</th>
    </tr>

    <% @q.result.each do |user| %>

    <tr>
    <td><img src="<%= user.imageurl %>" class="thumbnail" width="100"/> </td>
    <td><%= user.firstname %> </td>
    <td><%= user.lastname %> </td>
    <td>   <%= user.program %> </td>
    <td>   <%= user.gradyear %> </td>
    <td>   <%= user.indexpert %> </td>
    <td>   <%= user.funcexpert %> </td>

    <td>
      <a href="/critiques/new?user_id=<%= user.id %>" class="btn btn-success"> Provide Feedback</a>
    </td>

  </tr>
</div>

<%end %>
</table>
<% end %>
